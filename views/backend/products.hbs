<link rel="stylesheet" href="/stylesheets/admin/admin.css">
<title>Users</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div id="admin-sidebar"
                class="col-lg-2 col-md-3 vh-100 bg-light admin-mobile-sidebar admin-sidebar-hidden z-3">
                {{>admin-sidebar}}
            </div>
            <div class="col admin-content">
                {{>admin-header}}
                <div class="row flex-column">
                    <div class="col d-flex justify-content-end p-3">
                        <a href="/admin/products/add">
                            <button class="btn btn-primary">Add Product</button>
                        </a>
                    </div>
                    <div class="col overflow-auto">
                        {{#if users}}
                        <table class="table align-middle mb-0 bg-white">
                            <thead class="bg-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Username</th>
                                    <th>Status</th>
                                    <th>Role</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="/images/user_avatar.png" class="rounded-circle" alt=""
                                                style="width: 45px; height: 45px" />
                                            <div class="ms-3">
                                                <p class="fw-bold mb-1">{{this.fname}} {{this.lname}}</p>
                                                <p class="text-muted mb-0">{{this.email}}</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="fw-normal mb-1">{{this.username}}</p>
                                    </td>
                                    <td>
                                        <span class="user-table-badge">{{this.status}}</span>
                                    </td>
                                    <td>{{this.role}}</td>
                                    <td>
                                        <a href="/admin/users/edit/{{this.username}}">
                                            <button type="button" class="btn btn-primary btn-rounded btn-sm fw-bold"
                                                data-mdb-ripple-color="dark">
                                                Edit
                                            </button>
                                        </a>
                                        <a href="/admin/users/delete/{{this.username}}" onclick="return confirm('You are deleting {{this.username}}...')">
                                            <button type="button" class="btn btn-danger btn-rounded btn-sm fw-bold"
                                                data-mdb-ripple-color="dark">
                                                Delete
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                                {{else}}
                                <p>No products found!</p>
                                {{/if}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script defer src="/javascripts/admin/admin.js"></script>