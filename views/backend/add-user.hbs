<link rel="stylesheet" href="/stylesheets/admin/admin.css">
<title>Add User</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div id="admin-sidebar"
                class="col-lg-2 col-md-3 vh-100 bg-light admin-mobile-sidebar admin-sidebar-hidden z-3">
                {{>admin-sidebar}}
            </div>
            <div class="col">
                {{>admin-header}}
                <div class="row p-5">
                    <div class="col-sm-12 col-md-12 col-lg-6">
                        {{#if register_err}}
                            <div class="col user-register-error">
                                <i class="ri-error-warning-line"></i>
                                <p class="m-0">{{register_err}}</p>
                            </div>
                        {{/if}}
                        <form class="d-flex flex-column gap-4" method="post" action="/admin/users/add">
                            <div class="form-group">
                                <label for="fname">First Name</label>
                                <input name="fname" type="text" class="form-control" id="fname" placeholder="Enter First Name">
                            </div>
                            <div class="form-group">
                                <label for="lname">Last Name</label>
                                <input name="lname" type="text" class="form-control" id="lname" placeholder="Enter Last Name">
                            </div>
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input name="username" type="text" class="form-control" id="username" placeholder="Enter Username">
                            </div>
                            <div class="form-group">
                                <label for="email">Email address</label>
                                <input name="email" type="email" class="form-control" id="email" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input name="password" type="password" class="form-control" id="password" placeholder="Password">
                            </div>
                            <div class="form-group w-50">
                                <label for="user-role">User Role</label>
                                <select name="role" class="form-select" aria-label="Default select example" id="user-role">
                                    <option> - select role - </option>
                                    <option value="customer">customer</option>
                                    <option value="editor">editor</option>
                                    <option value="admin">admin</option>
                                </select>
                            </div>
                            <div class="form-group w-50">
                                <label for="user-status">User Role</label>
                                <select name="status" class="form-select" aria-label="Default select example" id="user-status">
                                    <option> - select status - </option>
                                    <option value="active">active</option>
                                    <option value="inactive">inactive</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary w-25">Add User</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script defer src="/javascripts/admin/admin.js"></script>